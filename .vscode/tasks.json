{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": ["-S", ".", "-B", "build"],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "detail": "Configure CMake project for Debug (multi-config, no build type)"
        },
        {
            "label": "CMake Configure (Release)",
            "type": "shell",
            "command": "cmake",
            "args": ["-S", ".", "-B", "build"],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "detail": "Configure CMake project for Release (multi-config, no build type)"
        },
        {
            "label": "Build Flux (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--config", "Debug"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": ["CMake Configure (Debug)"],
            "detail": "Build the Flux compiler and all tests (Debug)"
        },
        {
            "label": "Build Flux (Release)",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--config", "Release"],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "dependsOn": ["CMake Configure (Release)"],
            "detail": "Build the Flux compiler and all tests (Release)"
        },
        {
            "label": "Run Tests (Debug)",
            "type": "shell",
            "command": "ctest",
            "args": ["--test-dir", "build", "-C", "Debug", "--output-on-failure"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": ["Build Flux (Debug)"],
            "detail": "Run all unit tests (Debug)"
        },
        {
            "label": "Run Tests (Release)",
            "type": "shell",
            "command": "ctest",
            "args": ["--test-dir", "build", "-C", "Release", "--output-on-failure"],
            "group": "test",
            "problemMatcher": [],
            "dependsOn": ["Build Flux (Release)"],
            "detail": "Run all unit tests (Release)"
        },
        {
            "label": "Clean (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--config", "Debug", "--target", "clean"],
            "group": "build",
            "problemMatcher": [],
            "detail": "Clean Debug build artifacts"
        },
        {
            "label": "Clean (Release)",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--config", "Release", "--target", "clean"],
            "group": "build",
            "problemMatcher": [],
            "detail": "Clean Release build artifacts"
        },
        {
            "label": "Reconfigure (Clean, Debug)",
            "type": "shell",
            "command": "cmake",
            "args": ["-S", ".", "-B", "build", "--fresh"],
            "group": "build",
            "problemMatcher": [],
            "detail": "Fresh CMake reconfigure (Debug)"
        },
        {
            "label": "Reconfigure (Clean, Release)",
            "type": "shell",
            "command": "cmake",
            "args": ["-S", ".", "-B", "build", "--fresh"],
            "group": "build",
            "problemMatcher": [],
            "detail": "Fresh CMake reconfigure (Release)"
        },
        {
            "label": "Run Flux (current file, Debug)",
            "type": "shell",
            "command": "${workspaceFolder}/build/Debug/flux.exe",
            "args": ["${file}"],
            "group": "none",
            "problemMatcher": [],
            "detail": "Compile the currently open .fl file (Debug)",
            "dependsOn": ["Build Flux (Debug)"]
        },
        {
            "label": "Run Flux (current file, Release)",
            "type": "shell",
            "command": "${workspaceFolder}/build/Release/flux.exe",
            "args": ["${file}"],
            "group": "none",
            "problemMatcher": [],
            "detail": "Compile the currently open .fl file (Release)",
            "dependsOn": ["Build Flux (Release)"]
        },
        {
            "label": "Dump Tokens (current file, Debug)",
            "type": "shell",
            "command": "${workspaceFolder}/build/Debug/flux.exe",
            "args": ["--dump-tokens", "${file}"],
            "group": "none",
            "problemMatcher": [],
            "detail": "Dump token stream for current file (Debug)",
            "dependsOn": ["Build Flux (Debug)"]
        },
        {
            "label": "Dump Tokens (current file, Release)",
            "type": "shell",
            "command": "${workspaceFolder}/build/Release/flux.exe",
            "args": ["--dump-tokens", "${file}"],
            "group": "none",
            "problemMatcher": [],
            "detail": "Dump token stream for current file (Release)",
            "dependsOn": ["Build Flux (Release)"]
        },
        {
            "label": "Dump AST (current file, Debug)",
            "type": "shell",
            "command": "${workspaceFolder}/build/Debug/flux.exe",
            "args": ["--dump-ast", "${file}"],
            "group": "none",
            "problemMatcher": [],
            "detail": "Dump AST for current file (Debug)",
            "dependsOn": ["Build Flux (Debug)"]
        },
        {
            "label": "Dump AST (current file, Release)",
            "type": "shell",
            "command": "${workspaceFolder}/build/Release/flux.exe",
            "args": ["--dump-ast", "${file}"],
            "group": "none",
            "problemMatcher": [],
            "detail": "Dump AST for current file (Release)",
            "dependsOn": ["Build Flux (Release)"]
        }
    ]
}
