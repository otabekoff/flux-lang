{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Flux",
    "scopeName": "source.flux",
    "fileTypes": ["fl"],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#annotations"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#characters"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#identifiers"
        },
        {
            "include": "#punctuation"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.flux",
                    "match": "//.*$"
                },
                {
                    "name": "comment.line.documentation.flux",
                    "match": "///.*$"
                },
                {
                    "name": "comment.block.flux",
                    "begin": "/\\*",
                    "end": "\\*/",
                    "patterns": [
                        {
                            "include": "#comments"
                        }
                    ]
                }
            ]
        },
        "annotations": {
            "patterns": [
                {
                    "name": "meta.annotation.flux",
                    "match": "(@)(doc|deprecated|test|inline|cold|packed|align|extern|no_mangle|cfg|derive)\\b",
                    "captures": {
                        "1": {
                            "name": "punctuation.definition.annotation.flux"
                        },
                        "2": {
                            "name": "storage.type.annotation.flux"
                        }
                    }
                },
                {
                    "name": "meta.annotation.flux",
                    "match": "(@)(\\w+)",
                    "captures": {
                        "1": {
                            "name": "punctuation.definition.annotation.flux"
                        },
                        "2": {
                            "name": "storage.type.annotation.flux"
                        }
                    }
                },
                {
                    "name": "meta.attribute.flux",
                    "begin": "(#!?)(\\[)",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.definition.attribute.flux"
                        },
                        "2": {
                            "name": "punctuation.section.attribute.begin.bracket.square.flux"
                        }
                    },
                    "end": "\\]",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.section.attribute.end.bracket.square.flux"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#annotations"
                        }
                    ]
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.flux",
                    "begin": "\"",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.begin.flux"
                        }
                    },
                    "end": "\"",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.end.flux"
                        }
                    },
                    "patterns": [
                        {
                            "name": "constant.character.escape.flux",
                            "match": "\\\\[0nrt\\\\\"'abfv]"
                        },
                        {
                            "name": "constant.character.escape.unicode.flux",
                            "match": "\\\\u\\{[0-9a-fA-F]+\\}"
                        },
                        {
                            "name": "constant.character.escape.hex.flux",
                            "match": "\\\\x[0-9a-fA-F]{2}"
                        }
                    ]
                }
            ]
        },
        "characters": {
            "patterns": [
                {
                    "name": "string.quoted.single.flux",
                    "match": "'(?:\\\\[0nrt\\\\\"'abfv]|\\\\u\\{[0-9a-fA-F]+\\}|\\\\x[0-9a-fA-F]{2}|[^'\\\\])'",
                    "captures": {
                        "0": {
                            "name": "string.quoted.single.flux"
                        }
                    }
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.hex.flux",
                    "match": "\\b0[xX][0-9a-fA-F][0-9a-fA-F_]*\\b"
                },
                {
                    "name": "constant.numeric.binary.flux",
                    "match": "\\b0[bB][01][01_]*\\b"
                },
                {
                    "name": "constant.numeric.octal.flux",
                    "match": "\\b0[oO][0-7][0-7_]*\\b"
                },
                {
                    "name": "constant.numeric.float.flux",
                    "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*(?:[eE][+-]?[0-9][0-9_]*)?\\b"
                },
                {
                    "name": "constant.numeric.float.flux",
                    "match": "\\b[0-9][0-9_]*[eE][+-]?[0-9][0-9_]*\\b"
                },
                {
                    "name": "constant.numeric.integer.flux",
                    "match": "\\b[0-9][0-9_]*\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.declaration.flux",
                    "match": "\\b(module|import|func|let|mut|const|struct|class|enum|trait|impl|type|use)\\b"
                },
                {
                    "name": "keyword.control.flow.flux",
                    "match": "\\b(if|else|match|for|while|loop|break|continue|return|in)\\b"
                },
                {
                    "name": "keyword.ownership.flux",
                    "match": "\\b(move|ref|drop)\\b"
                },
                {
                    "name": "keyword.concurrency.flux",
                    "match": "\\b(async|await|spawn)\\b"
                },
                {
                    "name": "keyword.safety.flux",
                    "match": "\\b(unsafe)\\b"
                },
                {
                    "name": "storage.modifier.visibility.flux",
                    "match": "\\b(pub|public|private)\\b"
                },
                {
                    "name": "keyword.operator.logical.flux",
                    "match": "\\b(and|or|not)\\b"
                },
                {
                    "name": "keyword.operator.cast.flux",
                    "match": "\\b(as)\\b"
                },
                {
                    "name": "keyword.operator.typecheck.flux",
                    "match": "\\b(is)\\b"
                },
                {
                    "name": "keyword.other.flux",
                    "match": "\\b(where|panic|assert)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.builtin.flux",
                    "match": "\\b(Int8|Int16|Int32|Int64|Int128|UInt8|UInt16|UInt32|UInt64|UInt128|Float32|Float64|Bool|Char|String|Void|Never)\\b"
                },
                {
                    "name": "storage.type.generic.flux",
                    "match": "\\b(Option|Result|Vec|Map|Set|Box|Rc|Arc|Ref|MutRef|Array|Slice)\\b"
                },
                {
                    "name": "variable.language.self.flux",
                    "match": "\\bself\\b"
                },
                {
                    "name": "storage.type.self.flux",
                    "match": "\\bSelf\\b"
                },
                {
                    "comment": "User-defined types (PascalCase identifiers)",
                    "name": "entity.name.type.flux",
                    "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.language.boolean.true.flux",
                    "match": "\\btrue\\b"
                },
                {
                    "name": "constant.language.boolean.false.flux",
                    "match": "\\bfalse\\b"
                },
                {
                    "name": "constant.language.option.flux",
                    "match": "\\b(None|Some)\\b"
                },
                {
                    "name": "constant.language.result.flux",
                    "match": "\\b(Ok|Err)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "punctuation.separator.function.return-type.flux",
                    "match": "->"
                },
                {
                    "name": "keyword.control.match-arm.flux",
                    "match": "=>"
                },
                {
                    "name": "keyword.operator.comparison.flux",
                    "match": "==|!=|<=|>=|<|>"
                },
                {
                    "name": "keyword.operator.assignment.compound.flux",
                    "match": "\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^="
                },
                {
                    "name": "keyword.operator.assignment.flux",
                    "match": "="
                },
                {
                    "name": "keyword.operator.arithmetic.flux",
                    "match": "\\+|-|\\*|/|%"
                },
                {
                    "name": "keyword.operator.bitwise.flux",
                    "match": "<<|>>|&|\\||\\^|~"
                },
                {
                    "name": "keyword.operator.namespace.flux",
                    "match": "::"
                },
                {
                    "name": "keyword.operator.range.flux",
                    "match": "\\.\\.\\.|\\.\\."
                },
                {
                    "name": "keyword.operator.question.flux",
                    "match": "\\?"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "comment": "Function definition",
                    "match": "\\b(func)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
                    "captures": {
                        "1": {
                            "name": "keyword.declaration.flux"
                        },
                        "2": {
                            "name": "entity.name.function.flux"
                        }
                    }
                },
                {
                    "comment": "Function call",
                    "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()",
                    "captures": {
                        "1": {
                            "name": "entity.name.function.call.flux"
                        }
                    }
                },
                {
                    "comment": "Method call after dot",
                    "match": "(?<=\\.)([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()",
                    "captures": {
                        "1": {
                            "name": "entity.name.function.method.flux"
                        }
                    }
                }
            ]
        },
        "identifiers": {
            "patterns": [
                {
                    "comment": "Lifetime annotation",
                    "name": "storage.modifier.lifetime.flux",
                    "match": "'[a-zA-Z_][a-zA-Z0-9_]*"
                },
                {
                    "comment": "Wildcard pattern",
                    "name": "variable.language.wildcard.flux",
                    "match": "\\b_\\b"
                }
            ]
        },
        "punctuation": {
            "patterns": [
                {
                    "name": "meta.block.flux",
                    "begin": "\\{",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.section.block.begin.bracket.curly.flux"
                        }
                    },
                    "end": "\\}",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.section.block.end.bracket.curly.flux"
                        }
                    }
                },
                {
                    "name": "meta.brackets.round.flux",
                    "begin": "\\(",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.section.parens.begin.bracket.round.flux"
                        }
                    },
                    "end": "\\)",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.section.parens.end.bracket.round.flux"
                        }
                    }
                },
                {
                    "name": "meta.brackets.square.flux",
                    "begin": "\\[",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.section.brackets.begin.bracket.square.flux"
                        }
                    },
                    "end": "\\]",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.section.brackets.end.bracket.square.flux"
                        }
                    }
                },
                {
                    "name": "punctuation.comma.flux",
                    "match": ","
                },
                {
                    "name": "punctuation.semicolon.flux",
                    "match": ";"
                },
                {
                    "name": "punctuation.colon.flux",
                    "match": ":"
                },
                {
                    "name": "punctuation.dot.flux",
                    "match": "\\."
                }
            ]
        }
    }
}
