{
    "name": "flux-lang",
    "displayName": "Flux Language",
    "description": "Language support for the Flux programming language â€” syntax highlighting, snippets, bracket matching, and more.",
    "version": "0.1.0",
    "publisher": "flux-lang",
    "license": "MIT",
    "scripts": {
        "pack": "vsce package && antigravity --install-extension flux-lang-0.1.0.vsix"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "flux",
        "fl",
        "systems programming",
        "ownership",
        "static typing"
    ],
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/flux-lang/flux"
    },
    "contributes": {
        "languages": [
            {
                "id": "flux",
                "aliases": [
                    "Flux",
                    "flux"
                ],
                "extensions": [
                    ".fl"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./icon.png",
                    "dark": "./icon.png"
                }
            }
        ],
        "configurationDefaults": {
            "[flux]": {
                "editor.bracketPairColorization.enabled": true
            }
        },
        "grammars": [
            {
                "language": "flux",
                "scopeName": "source.flux",
                "path": "./syntaxes/flux.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "flux",
                "path": "./snippets/flux.json"
            }
        ]
    },
    "dependencies": {
        "@vscode/vsce": "^3.7.1"
    }
}
